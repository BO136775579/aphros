#!/usr/bin/env python3

import os
import aphros


class Test(aphros.TestBase):
    def __init__(self):
        cases = ["hypre", "conjugate", "jacobi", "default"]
        super().__init__(cases=cases)

    def run(self, case):
        self.runcmd(
            "ap.run ./t.linear --tol 1e-5 --maxiter 1000 --solver {}".format(
                case))
        return ["out"]

    def check(self, outdir, refdir, output_files):
        def get_diff(path):
            d = dict()
            with open(path, 'r') as f:
                exec(f.read(), None, d,)
            print(d)
            return d["max_diff_exact"]
        name = 'out'
        out = os.path.join(outdir, name)
        ref = os.path.join(refdir, name)
        assert get_diff(out) < get_diff(ref) * 2 + 1e-12
        return True


Test().main()
